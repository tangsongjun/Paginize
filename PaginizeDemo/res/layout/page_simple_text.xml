<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              tools:background="#ffff"
              android:padding="12dp"
        >
    <TextView
            android:id="@+id/tv_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Simple Text"
            android:gravity="center"
            android:textSize="21dp"
            android:padding="12dp"
            android:textColor="#f000"
            />

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ViewPagerPage can also be used to implement a page with a tabbar(like the MainPage in this demo)."
            android:gravity="center"
            android:textColor="#333"
            />
    <Button
              android:id="@+id/btn_jump"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="Scroll to next page with animation"
              android:gravity="center"
              android:layout_marginTop="12dp"
            />
</LinearLayout>
